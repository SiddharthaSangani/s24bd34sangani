extends layout

block content
  h1= title
  - let results = [{cookies_name:'swe',cookies_for:'all',cost:100},{cookies_name:'seew',cookies_for:'tony',cost:150},{cookies_name:'pedig',cookies_for:'snuf',cost:200}]
  div(class="container-fluid")
    div(class="row")
      each item, index in results  
        div(class="col-sm-2",onclick=`buy(${index})`)
          p #{item.cookies_name} 
          p #{item.cookies_for}
          p #{item.cost} 
  script.
    function buy(index) {
    alert("You purchased item " + index);}   
  